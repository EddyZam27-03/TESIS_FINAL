<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Ensenando">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/streaming_red"
            android:elevation="0dp"
            app:title="Reportes"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filtros (Solo Docente y Administrador) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_3d"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filtros"
                        android:textAppearance="@style/TextAppearance.Headline3"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- Filtro por Estudiante (Solo Docente) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEstudiante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Estudiante"
                        android:visibility="gone">

                        <AutoCompleteTextView
                            android:id="@+id/actvEstudiante"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Filtro por Categoría -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Categoría"
                        android:visibility="gone">

                        <AutoCompleteTextView
                            android:id="@+id/actvCategoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Rango de Fechas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFechaDesde"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Desde" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFechaHasta"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Hasta" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAplicarFiltros"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Aplicar Filtros"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gráficos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_3d"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visualización"
                        android:textAppearance="@style/TextAppearance.Headline3"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- TODO: Agregar gráficos con MPAndroidChart -->
                    <TextView
                        android:id="@+id/tvGraficos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gráficos próximamente"
                        android:textAppearance="@style/TextAppearance.Body1"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ FIX: Vista previa del Reporte -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVistaPreviaReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_3d"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vista Previa del Reporte"
                        android:textAppearance="@style/TextAppearance.Headline3"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- ✅ FIX: Recuadro scrollable para mostrar el PDF visualmente -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="600dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        
                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">
                            
                            <!-- ✅ FIX: RecyclerView para mostrar páginas del PDF -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPdfPages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                tools:listitem="@layout/item_pdf_page" />
                        </androidx.core.widget.NestedScrollView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de Acción -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerarPDF"
                style="@style/Widget.Ensenando.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Generar PDF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompartir"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
